<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".HomeScreen">

    <!-- Pantry -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:text="@string/home_pantry"
        android:backgroundTint="@color/home_pantry"
        android:drawableStart="@drawable/ic_inventory"
        android:drawablePadding="@dimen/home_button_left_right_padding"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/home_button_left_right_padding"
        android:paddingStart="@dimen/home_button_left_right_padding"
        android:textColor="@color/home_button_text_color"
        android:textSize="@dimen/home_button_text_size"
        android:onClick="showPantry"/>

    <!-- Leftovers -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:text="@string/home_leftovers"
        android:backgroundTint="@color/home_leftovers"
        android:drawableStart="@drawable/ic_leftovers"
        android:drawablePadding="@dimen/home_button_left_right_padding"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/home_button_left_right_padding"
        android:paddingStart="@dimen/home_button_left_right_padding"
        android:textColor="@color/home_button_text_color"
        android:textSize="@dimen/home_button_text_size"
        android:onClick="showLeftovers"/>

    <!-- Shopping List-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:text="@string/home_shopping_list"
        android:backgroundTint="@color/home_shopping_list"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_shopping_list"
        android:drawablePadding="@dimen/home_button_left_right_padding"
        android:paddingEnd="@dimen/home_button_left_right_padding"
        android:paddingStart="@dimen/home_button_left_right_padding"
        android:textColor="@color/home_button_text_color"
        android:textSize="@dimen/home_button_text_size"
        android:onClick="showShoppingList"/>

    <!-- Divider Line -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/home_divider_text"/>

    <!-- Barcode Scan Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:text="@string/home_scan_barcode"
        android:backgroundTint="@color/home_barcode_scan"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_barcode_scan"
        android:drawablePadding="@dimen/home_button_left_right_padding"
        android:paddingEnd="@dimen/home_button_left_right_padding"
        android:paddingStart="@dimen/home_button_left_right_padding"
        android:textColor="@color/home_button_text_color"
        android:textSize="@dimen/home_button_text_size"/>

</LinearLayout>
