<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="peanutbuttersandwich.mypantry" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Leftovers"
            android:label="@string/title_activity_leftovers"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="peanutbuttersandwich.mypantry.HomeScreen" />
        </activity>
        <activity
            android:name=".ShoppingList"
            android:label="@string/title_activity_shopping_list"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="peanutbuttersandwich.mypantry.HomeScreen" />
        </activity>
        <activity
            android:name=".ShowPantry"
            android:label="@string/title_activity_show_pantry"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="peanutbuttersandwich.mypantry.HomeScreen" />
        </activity>
    </application>

</manifest>
